n = 5  # Number of rows

for i in range(1, n + 1):  # Outer loop for rows
    for j in range(1, i + 1):  # Inner loop for columns
        # Print 1 if (i + j) is even, else 0
        if (i + j) % 2 == 0:
            print("1", end="")
        else:
            print("0", end="")
    print()  

rows = 5

max_stars = 9 # Maximum stars in the first row

for i in range(rows):
    # Print spaces first
    for space in range(i):
        print(" ", end="")  # Increasing spaces each row
    # Print stars
    stars = max_stars - (2 * i)  # Decrease stars by 2 each row
    for star in range(stars):
        print("*", end="")
    print()

i = 9
while i > 0:
    print("*" * i)
    i -= 2

