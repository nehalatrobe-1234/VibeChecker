!ls {path}

import os
import pandas as pd

# Assuming 'path' variable is available from previous kagglehub download
csv_file_path = os.path.join(path, '1553768847-housing.csv')
df = pd.read_csv(csv_file_path)
print("DataFrame loaded successfully!\n")
print(df.head())

print("\nShape of DataFrame:", df.shape)
print("\nColumns:", df.columns)
print("\nData Types:\n", df.dtypes)
print("\nSummary Statistics:\n", df.describe())
print("\nNull Values:\n", df.isnull().sum())


df['ocean_proximity'] = df['ocean_proximity'].str.upper()

df['housing_median_age'] = df['housing_median_age'] + 10
print("\n Columns modified successfully!")

print("\nFirst 5 rows and 3 columns using iloc:\n", df.iloc[:5, :3])
print("\nSpecific cell (row 0, col 1):", df.iloc[0, 1])

df.fillna(0, inplace=True)
print("\n Null values handled!")

df.drop(columns=['population'], inplace=True)

# Drop a row by index (e.g., first row)
df.drop(index=0, inplace=True)
print("\n Dropped column and row successfully!")

filtered_df = df[df['ocean_proximity'].str.startswith('I')]
print("\nFiltered rows where ocean_proximity starts with 'I':\n", filtered_df.head())

df['location'] = df['longitude'].astype(str) + ", " + df['latitude'].astype(str)
print("\n New column 'location' created successfully!")

df.to_csv("housing_modified.csv", index=False)
print("\n Modified DataFrame saved as 'housing_modified.csv'")


